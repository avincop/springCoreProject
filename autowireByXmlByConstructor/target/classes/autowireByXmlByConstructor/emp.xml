<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
       xmlns:context="http://www.springframework.org/schema/context" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
                http://www.springframework.org/schema/context 
                http://www.springframework.org/schema/context/spring-context-3.0.xsd"> 
 <context:annotation-config></context:annotation-config>               
<bean id="dept" class="autowireByXmlByConstructor.Department">
<property name="dept_name" value="TCG"></property>

</bean>

<bean id="adr" class="autowireByXmlByConstructor.Address">
<property name="cityName" value="Jaipur"></property>

</bean>

<bean id="emp" class="autowireByXmlByConstructor.Emp">
<property name="name" value="Avinash"></property>

</bean>


	
</beans>